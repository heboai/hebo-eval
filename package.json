{
  "name": "hebo-eval",
  "version": "0.1.3",
  "description": "Evaluation framework for Hebo AI",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "node --loader ts-node/esm src/examples/generate-report.ts && node --loader ts-node/esm src/tests/scoring-service.test.ts",
    "report": "node --loader ts-node/esm src/examples/generate-report.ts semantic-similarity 0.45",
    "report:exact": "node --loader ts-node/esm src/examples/generate-report.ts exact-match 1 true",
    "score": "node --loader ts-node/esm src/tests/scoring-service.test.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@langchain/core": "^0.1.63",
    "@langchain/openai": "^0.0.14",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "langchain": "^0.1.9",
    "marked": "^4.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/jest": "^29.5.12",
    "@types/marked": "^4.0.0",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "5.5"
  }
}
